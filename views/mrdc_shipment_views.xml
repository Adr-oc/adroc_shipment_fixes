    <!-- Inherit Search Views to add filters -->

    <!-- mrdc_shipment_carrier search view -->
    <record id="view_mrdc_shipment_search_inherit_carrier" model="ir.ui.view">
        <field name="name">mrdc.shipment.search.inherit.carrier</field>
        <field name="model">mrdc.shipment</field>
        <field name="inherit_id" ref="mrdc_shipment_carrier.view_mrdc_shipment_search"/>
        <field name="arch" type="xml">
            <field name="transport_type" position="before">
                <field name="external_id" string="ID Externo"/>
                <field name="name" string="Nombre"/>
                <field name="partner_id" string="Cliente"/>
                <field name="consignee_id" string="Consignatario"/>
                <field name="shipper_id" string="Shipper"/>
                <field name="notify_id" string="Notificador"/>
                <field name="ref_1" string="Referencia 1"/>
                <field name="ref_2" string="Referencia 2"/>
                <field name="ref_3" string="Referencia 3"/>
                <field name="customs_declaration_number" string="DUCA"/>
                <field name="bl_awb_number" string="Número de BL/AWB"/>
                <field name="house_bl_awb_number" string="Número de House BL/AWB"/>
            </field>
            <field name="transport_type" position="after">
                <separator/>
                <filter string="Borrador" name="filter_draft" domain="[('state', '=', 'draft')]"/>
                <filter string="En Tránsito" name="filter_in_transit" domain="[('state', '=', 'in_transit')]"/>
                <filter string="Entregado" name="filter_delivered" domain="[('state', '=', 'delivered')]"/>
                <filter string="Cancelado" name="filter_cancelled" domain="[('state', '=', 'cancelled')]"/>
                <separator/>
                <group expand="0" string="Agrupar por">
                    <filter string="Cliente" name="group_partner" context="{'group_by': 'partner_id'}"/>
                    <filter string="Estado" name="group_state" context="{'group_by': 'state'}"/>
                </group>
            </field>
        </field>
    </record>

