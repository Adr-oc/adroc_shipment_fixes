    <!-- Inherit Tree Views - Standard order for all modules -->

    <!-- mrdc_shipment_carrier tree view -->
    <record id="view_mrdc_shipment_tree_inherit_carrier" model="ir.ui.view">
        <field name="name">mrdc.shipment.tree.inherit.carrier</field>
        <field name="model">mrdc.shipment</field>
        <field name="inherit_id" ref="mrdc_shipment_carrier.view_mrdc_shipment_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//list" position="replace">
                <list string="Embarques" create="true" edit="true">
                    <field name="external_id"/>
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="delivery_observations" string="Observaciones"/>

                    <field name="carrier_state_detail" string="Detalle TR."/>
                    <!-- <field name="house_bl_awb_number" string="HBL/AWB"/> -->
                    <field name="selectivo" widget="badge"
                        decoration-success="selectivo == 'verde'"
                        decoration-danger="selectivo == 'rojo'"/>
                    <!-- <field name="ref_3"/> -->
                    <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}" string="Etiqueta"/>
                    <field name="aduana_select_id" string="Aduana"/>
                    <field name="time_without_update"/>
                    <field name="state" widget="badge"
                        decoration-info="state == 'draft'"
                        decoration-primary="state == 'in_transit'"
                        decoration-success="state == 'delivered'"
                        decoration-muted="state == 'cancelled'"/>
                </list>
            </xpath>
        </field>
    </record>

