<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_move_form_shipment_fields" model="ir.ui.view">
        <field name="name">account.move.form.shipment.fields</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- Add referencia_1, referencia_2, referencia_3, duca, bl in the header_left_group -->
            <xpath expr="//group[@id='header_left_group']" position="inside">
                <field name="referencia_1" readonly="0"/>
                <field name="referencia_2" readonly="0"/>
                <field name="referencia_3" readonly="0"/>
                <field name="duca" readonly="0"/>
                <field name="bl" readonly="0"/>
            </xpath>
        </field>
    </record>
</odoo>
